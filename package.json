{
  "name": "react-scrabble",
  "description": "The scrabble board game written in React",
  "main": "dist/index.js",
  "jsnext:main": "components/index.js",
  "module": "components/index.js",
  "files": [
    "src",
    "dist",
    "README"
  ],
  "scripts": {
    "lint": "eslint components/** tests/**",
    "lintfix": "eslint --fix components/** tests/**",
    "prepublish": "npm run lint && npm run build",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "storybook": "start-storybook -p 9002",
    "test": "mocha --require tests/config/setup 'tests/**/*.test.js'",
    "test:watch": "mocha --require tests/config/setup 'tests/**/*.test.js' --watch",
    "test:cover": "istanbul cover -x *.test.js _mocha -- -R spec --require tests/config/setup 'tests/**/*.test.js'",
    "test:report": "cat ./coverage/lcov.info | codecov && rm -rf ./coverage",
    "build": "babel src --out-dir dist",
    "docs": "build-storybook -o docs",
    "commit": "git cz",
    "deploy-storybook": "storybook-to-ghpages"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rcdexta/react-scrabble.git"
  },
  "keywords": [
    "react",
    "scrabble"
  ],
  "author": "RC",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rcdexta/react-scrabble/issues"
  },
  "homepage": "https://github.com/rcdexta/react-scrabble",
  "devDependencies": {
    "@kadira/storybook": "^2.35.3",
    "@kadira/storybook-addon-actions": "^1.1.1",
    "@kadira/storybook-addon-knobs": "^1.7.1",
    "@kadira/storybook-addon-options": "^1.0.2",
    "autoprefixer": "^6.7.7",
    "babel-cli": "^6.24.0",
    "babel-core": "^6.24.0",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-es2015": "^6.24.0",
    "babel-preset-react": "^6.23.0",
    "chai": "^3.5.0",
    "chai-enzyme": "^0.6.1",
    "codecov.io": "^0.1.6",
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.0.0",
    "enzyme": "^2.7.1",
    "eslint": "^3.17.1",
    "eslint-config-standard": "^7.0.1",
    "eslint-config-standard-react": "^4.3.0",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-react": "^6.10.0",
    "eslint-plugin-standard": "^2.1.1",
    "eventsource-polyfill": "^0.9.6",
    "extract-text-webpack-plugin": "^1.0.1",
    "isparta": "^4.0.0",
    "istanbul": "^1.1.0-alpha.1",
    "jsdom": "^9.12.0",
    "mocha": "^3.2.0",
    "node-sass": "^4.5.0",
    "react-addons-test-utils": "^15.4.2",
    "rimraf": "^2.6.1",
    "sass-loader": "^6.0.3",
    "semantic-release": "^6.3.2",
    "sinon": "^2.0.0",
    "webpack": "^2.2.1"
  },
  "dependencies": {
    "@kadira/storybook-deployer": "^1.0.0",
    "babel-preset-stage-0": "^6.22.0",
    "classnames": "^2.2.3",
    "immutability-helper": "^2.1.2",
    "invariant": "^2.2.2",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "styled-components": "^1.4.4"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  }
}
